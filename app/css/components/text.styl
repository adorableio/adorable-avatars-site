* { -webkit-font-smoothing: antialiased; }

h1, h2, h3, h4, h5 {
  color: header-font-color;
  font-family: header-font;
  font-weight: header-font-weight;
  text-transform: header-font-transform;
  -webkit-margin-before: 0;
  -webkit-margin-after: 0;
}

h2 {
  font-size: 2rem;
}

h3 {
  font-size: 1.4rem;
}

body, p {
  color: base-font-color;
  font-family: base-font;
  font-size: base-font-size;
  font-weight: base-font-weight;
  line-height: base-line-height;
  text-shadow: base-text-shadow;
}

p {
  padding-bottom: 1em;
  -webkit-margin-before: 0;
  -webkit-margin-after: 0;
}

blockquote {
  box-shadow: inset 2px 0 light-purple;
  font-family: code-font;
  background: rgba(light-purple, .1);
  display: block;
  position: relative;
  font-style: italic;
  left: 0;
  right: 0;
  margin-left: 0;
  margin-right: 0;
  padding: 2px 0;
}

code {
  background: rgba(black, 10%);
  padding-left: .25em;
  padding-right: .25em;
}

small {
  color: rgba(base-font-color, 80%)
}

h1 {
  color: header-font-color;
  font-size: 48px;
}
h2 {
  color: header-font-color;
  font-size: 32px;
  line-height: 1.4;
  margin-bottom: .6em;
}

p.subtitle {
  color: rgba(black, .75);
  font-size: 24px;
}

a {
  color: aqua;
  text-decoration: none;
  transition: all .3s ease;
  &.special {
    color: red;
    font-weight: 500;
  }
}
