

html, body {
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

body {
  background: off-white;

  &.scrolled {
    .navigation {
      background: rgba(purple, .95);
    }
  }

  &.open {
    .navigation {
      height: 100%;
      background: rgba(purple, .95);
    }
  }
}

// --------------------------------------------------
// Generic styles
//

h1 {
  color: red;
  font-size: 48px;
}
h2 {
  color: red;
  font-size: 32px;
  line-height: 1.4;
  margin-bottom: .6em;
}

p.subtitle {
  color: rgba(black, .75);
  font-size: 24px;
}

a {
  color: blue;
  text-decoration: none;
}

.button {
  background-color: red;
  color: white;
  cursor: pointer;
  display: inline-block;
  padding: 15px 25px 16px;
  margin-bottom: 1em;
  margin-right: (column-gutter/2);

  &.lame {
    background-color: transparent;
    color: aqua;
    box-shadow: 0 0 0 1px aqua;
    &:hover {
      color: black;
    }
  }

  &:hover, &.zeroclipboard-is-hover {
    background-color: aqua;
    text-decoration: none;
  }
}

label {
  color: rgba(white, .45);
  display: block;
  font-size: 11px;
  text-transform: uppercase;

  span {
    color: white;
    font-size: 18px;
    text-transform: none;
    z-index: 300;
    position: relative;
  }
}

section {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  .row {
    clearfix();
  }

  h2.title {
    margin: 0;
    padding: 0;
    font-weight: 100;
  }
}

.container {
  display: inline-block;
  width: auto;
}


// --------------------------------------------------
// <field>-value flash animation things
//

flash(background-color, text-color) {
  background-color: background-color;
  color: text-color;
}

@-webkit-keyframes flash {
  0% { flash: white, white; }
  50% { flash: red, white; }
  100% { flash: rgba(red, 0), white; }
}

@-webkit-keyframes white-flash {
  0% { flash: white, white; }
  50% { flash: red, white; }
  100% { flash: white, red; }
}

addflash(name) {
  animation: name 600ms 1 ease-in;
  position: relative;
  z-index: 100;
}

[class*='-value'] {
  position: relative;
  padding: 0 5px;
  margin: 0 -5px
  .flash {
    addflash(flash);
  }
}


// --------------------------------------------------
// .navigation
//


#top,
#what,
#demo {
  display: block;
  position: relative;
  top: -70px;
  visibility: hidden;
}

.navigation {
  transition: all .3s ease;
  position: fixed;
  background:  transparent;
  display: block;
  text-align: center;
  height: 70px;
  overflow: hidden;
  padding: 12px 0 0;
  left: 0;
  right: 0;
  top: 0;
  z-index: 1000;


  .menu {
    inline-icon: 'menu';
    color: red;
    display: block;
    font-size: 1.6em;
    text-align: right;
    margin-right: 20px;
    span { display: none; }
  }

  ul {
    list-style-type: none;
    padding: 0;

    li {
      display: block;
      margin: -6px 0 6px;
      &:last-child { margin-right: 0; }
      [class^='icon-']:before {
        font-size: 36px;
        line-height: 1;
        height: 100%;
        position: relative;
        top: 2px;
        vertical-align: bottom;
      }
      a {
        font-family: header-font;
        font-size: 18px;
        font-weight: 300;
        display: block;
        padding: 10px 15px 8px;
        color: red;
        box-shadow: 0 0 0 1px transparent;
        vertical-align: bottom;
        &:hover {
          background: aqua;
          color: black;
          box-shadow: 0 0 0 1px aqua;
        }
      }
    }
  }

  @media medium-up {

    padding: 0 0.8em;
    height: 74px;

    .menu { display: none; }

    .navigation {
      height: auto;
    }
    ul {
      height: auto;
      opacity: 1;
      li {
        display: inline-block;
        a {
          margin-top: 0;
          padding-top: 5px;
        }
      }
    }

  }
}

