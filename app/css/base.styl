html, body {
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

body {
  background: off-white;
}

header {
  background: purple;
  padding: 60px 0;
  text-align: center;

  h1 {
    font-size: 94px;
  }
  h1, p { color: white; }

}

.button {
  background-color: red;
  color: white;
  display: inline-block;
  padding: 15px 25px 16px;
  margin-bottom: 1em;

  &.lame {
    background-color: light-grey;
  }
}

section {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  .row {
    clearfix();
  }

  h2.title {
    margin: 0;
    padding: 0;
    font-weight: 100;
  }
}

#what {
  background: aqua;
  padding-bottom: 60px;
  padding-top: 60px;

  h2.title {
    font-size: 54px;
  }
}


input-border = light-grey;
input-border-hover = lighten(red, 65%);
input-border-focus = red;

code-fade-color = light-grey;

#demo {
  background-image: url('/assets/img/header-bg.jpg');
  background-position: 50%;
  background-size: cover;
  height: 490px;
  padding-bottom: 20px;
  padding-top: 20px;
  position: relative;
  text-align: center;

  h2.title {
    color: black;
    font-size: 44px;
    margin-bottom: 10px;
    font-style: italic;
  }

  .form-card {
    background: rgba(black, .8);
    padding: 20px 0 20px 20px;

    [class*='-value'] {
      position: relative;
      padding: 5px 23px 5px 5px;
      margin: 0 -23px 0 0;
    }
    .input-container {
      box-shadow: 0 1px 0 rgba(aqua, .2);
      display: block;
      position: relative;
      padding-bottom: 15px;
      padding-right: 15px;
      margin-bottom: 15px;
      text-align: left;

      &:last-child {
        box-shadow: none;
        margin-bottom: 0;
        padding-bottom: 0;
      }

      .checkbox {
        background: transparent;
        display: block;
        position: absolute;
        right: 0;
        bottom: 0;
        top: 0;
        margin: 0;
        padding: 0 15px;
        margin-right: 0;

        input + label { color: rgba(white, .2); }
        input:checked + label { color: aqua; }

        &:hover {
          input + label { color: white; }
        }

        label {
          line-height: 57px;
        }
      }

      label {
        color: rgba(white, .45);
        display: block;
        font-size: 11px;
        text-transform: uppercase;

        span {
          color: white;
          font-size: 18px;
          text-transform: none;
          z-index: 300;
          position: relative;
        }
      }
    }
  }

  .container {
    display: inline-block;
    width: auto;
  }


  .code-row {
    text-align: center;
    position: absolute;
    bottom: -20px;
    left: 0;
    right: 0;
  }

  .code-wrapper {
    width: auto;
    display: inline-block;
  }

  code {
    background-color: code-background-color;
    padding: 2px 5px;
    display: inline-block;

    &.block {
      display: block;
      padding: 15px;
      position: relative;
      overflow: none;
      white-space: nowrap;
    }

    .fade {
      color: darken(code-fade-color, 15%);
      font-weight: 400;
    }

    .line-numbers {
      border-right: 1px solid code-fade-color;
      color: code-fade-color;
      padding: 15px 10px;
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
    }
  }

}



input, label {
  outline: none;
  vertical-align: middle;
}
label.inline {
  line-height: 1;
}


input[type=text] {
  background: none;
  box-shadow: 0 1px 0 rgba(input-border, .08);
  border: none;
  color: white;
  font-size: 16px;
  margin: 0;
  padding: 0;
  height: 36px;
  width: 100%;
  &:hover { box-shadow: 0 1px 0 input-border-hover; }
  &:focus { box-shadow: 0 1px 0 input-border-focus; }
}

input[type=range] {
  transition: all .6s ease;
  -webkit-appearance: none !important
  border-radius: 1000px;
  box-shadow: none;
  border: none;
  background-color: rgba(light-grey, .35);
  margin: 0;
  padding: 0 5px;
  height: 6px;
  width: 100%;
  outline: none;
}

input[type=range]::-webkit-slider-thumb {
  -webkit-appearance: none !important
  border-radius: 1000px;
  box-shadow: none;
  background-color: white;
  width: 20px;
  height: 20px;

}

input[type=checkbox] {
  display: none;
  + label {
    cursor: pointer;
    color: light-grey;
    font-size: 14px;
    height: 100%;
    text-transform: uppercase;
    text-decoration: line-through;
    padding: 11px 5px;
    height: 100%;
  }
  &:checked {
    + label {
      color: red;
      text-decoration: none;
    }
  }
}


flash(background-color, text-color) {
  background-color: background-color;
  color: text-color;
}
@-webkit-keyframes flash {
  0% { flash: white, white; }
  50% { flash: red, white; }
  100% { flash: rgba(red, 0), white; }
}

[class*='-value'] {
  &.flash {
    animation: flash 600ms 1 ease-in;
    position: relative;
    z-index: 100;
  }

}



a {
  color: blue;
  text-decoration: none;
  &:hover {
    text-decoration: underline;
  }
}

