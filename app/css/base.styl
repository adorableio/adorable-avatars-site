    color: white;
    margin-bottom: 20px;
  }

  img {
    box-shadow: 0 2px 0 0 rgba(purple, .2);
  }

  //
  // Code block

  .code-row {
    text-align: center;
    position: absolute;
    bottom: -32px;
    left: 0;
    right: 0;

    .code-wrapper {
      width: auto;
      display: inline-block;
    }
  }

  #copy-button {
    display: none;
    height: 52px;
    font-size: 18px;
    line-height: 1;
    margin: 0;
    padding: 17px 15px 15px;
    vertical-align: top;
  }

  code {
    background-color: code-background-color;
    display: inline-block;
    line-height: 1;
    font-size: 10px;
    padding: 2px 5px;

    &.flash {
      addflash(white-flash);
    }

    &.block {
      height: 52px;
      padding: 20px 15px 15px;
      position: relative;
      overflow: none;
      vertical-align: top;
      white-space: nowrap;
    }

    .fade {
      color: darken(code-fade-color, 15%);
      font-weight: 400;
    }
  }


  @media medium-up {
    #copy-button {
      display: inline-block;
    }
    code {
      font-size: code-font-size;
    }

    .form-card {
      margin-bottom: 0;
    }
  }
}



// --------------------------------------------------
// Form card stuff
//
.form-card {
  background: rgba(black, .8);
  margin-bottom: 20px;
  padding: 20px 0 20px 20px;

  [class*='-value'] {
    position: relative;
    padding: 5px 23px 5px 5px;
    margin: 0 -23px 0 0;
  }

  .input-container {
    box-shadow: 0 1px 0 rgba(aqua, .2);
    display: block;
    position: relative;
    padding-bottom: 15px;
    padding-right: 15px;
    margin-bottom: 15px;
    text-align: left;

    &:last-child {
      box-shadow: none;
      margin-bottom: 0;
      padding-bottom: 0;
    }

    .checkbox {
      background: transparent;
      display: block;
      position: absolute;
      right: 0;
      bottom: 0;
      top: 0;
      margin: 0;
      padding: 0 15px;
      margin-right: 0;

      input + label { color: rgba(white, .2); }
      input:checked + label { color: aqua; }

      &:hover input + label { color: white; }

      label { line-height: 57px; }
    }
  }
}

input, label {
  outline: none;
  vertical-align: middle;
}


input[type=text] {
  background: none;
  border: none;
  color: white;
  font-size: 16px;
  margin: 0;
  padding: 0;
  height: 36px;
  width: 100%;
}

input[type=range] {
  transition: all .6s ease;
  -webkit-appearance: none !important
  border-radius: 1000px;
  box-shadow: none;
  border: none;
  background-color: rgba(light-grey, .35);
  margin: 0;
  padding: 0 5px;
  height: 6px;
  width: 100%;
  outline: none;
}

input[type=range]::-webkit-slider-thumb {
  -webkit-appearance: none !important
  border-radius: 1000px;
  box-shadow: none;
  background-color: white;
  cursor: pointer;
  width: 20px;
  height: 20px;

}

input[type=checkbox] {
  display: none;
  + label {
    cursor: pointer;
    color: light-grey;
    font-size: 14px;
    height: 100%;
    text-transform: uppercase;
    text-decoration: line-through;
    padding: 11px 5px;
    height: 100%;
  }
  &:checked {
    + label {
      color: red;
      text-decoration: none;
    }
  }
}


